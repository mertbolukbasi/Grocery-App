<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="540.0" prefWidth="960.0" stylesheets="@carrierStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.grocery_app.controller.CarrierController">

    <top>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="top-bar">
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </padding>
                    <children>
                        <Label text="Group16 Greengrocer" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <Region HBox.hgrow="ALWAYS" />

                        <Label text="Welcome, Carrier" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>

                        <Button fx:id="btnLogout" mnemonicParsing="false" styleClass="ghost-button" text="LOGOUT" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="0" style="-fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <children>
                        <Button fx:id="tabBtnAvailable" onAction="#handleTabSwitch" prefHeight="40" prefWidth="200" styleClass="tab-button-active" text="Available Orders" userData="pageAvailable" />
                        <Button fx:id="tabBtnCurrent" onAction="#handleTabSwitch" prefHeight="40" prefWidth="200" styleClass="tab-button" text="My Current Orders" userData="pageCurrent" />
                        <Button fx:id="tabBtnHistory" onAction="#handleTabSwitch" prefHeight="40" prefWidth="200" styleClass="tab-button" text="History" userData="pageHistory" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <StackPane fx:id="contentArea" alignment="TOP_LEFT" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <VBox fx:id="pageAvailable" spacing="15.0" style="-fx-background-color: white;">
                <children>
                    <Label text="Orders Waiting for Delivery" textFill="#555555">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <TableView fx:id="tableAvailable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colAvId" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="colAvCust" prefWidth="150.0" text="Customer" />
                            <TableColumn fx:id="colAvAddr" prefWidth="200.0" text="Address" />
                            <TableColumn fx:id="colAvProd" prefWidth="200.0" text="Products" />
                            <TableColumn fx:id="colAvTotal" prefWidth="100.0" text="Total (TL)" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT">
                        <Button fx:id="btnTakeOrder" mnemonicParsing="false" styleClass="action-button" text="TAKE ORDER" />
                    </HBox>
                </children>
            </VBox>

            <VBox fx:id="pageCurrent" spacing="15.0" style="-fx-background-color: white;" visible="false">
                <children>
                    <Label text="Orders You are Carrying" textFill="#555555">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <TableView fx:id="tableCurrent" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCurId" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="colCurAddr" prefWidth="250.0" text="Address" />
                            <TableColumn fx:id="colCurProd" prefWidth="200.0" text="Products" />
                            <TableColumn fx:id="colCurTotal" prefWidth="100.0" text="Total (TL)" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
                    <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #f9f9f9; -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="Delivery Date:" />
                        <DatePicker fx:id="datePickerDelivery" />
                        <Button fx:id="btnComplete" mnemonicParsing="false" styleClass="action-button" text="COMPLETE ORDER" />
                    </HBox>
                </children>
            </VBox>

            <VBox fx:id="pageHistory" spacing="15.0" style="-fx-background-color: white;" visible="false">
                <children>
                    <Label text="Your Delivery History" textFill="#555555">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <TableView fx:id="tableCompleted" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCompId" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="colCompCust" prefWidth="150.0" text="Customer" />
                            <TableColumn fx:id="colCompTotal" prefWidth="100.0" text="Total (TL)" />
                            <TableColumn fx:id="colCompDate" prefWidth="150.0" text="Delivered Date" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
                </children>
            </VBox>

        </StackPane>
    </center>
</BorderPane>