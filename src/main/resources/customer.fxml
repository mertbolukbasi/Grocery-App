<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>

<BorderPane prefHeight="540" prefWidth="960" stylesheets="@app.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group16.grocery_app.controller.customerController">
    <style>
        -fx-background-color: #F5F5F5;
    </style>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 15px;">
            <MFXTextField fx:id="searchField"
                          prefWidth="250.0"
                          floatingText="Search products..."
                          styleClass="modern-textfield"/>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="usernameLabel"
                   text="username"
                   styleClass="username-label"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <content>
                <VBox spacing="20" style="-fx-padding: 20px;">
                    <Label text="Products" styleClass="section-header" />
                    <Accordion fx:id="productAccordion" prefWidth="900.0">
                        <panes>
                            <TitledPane text="Vegetables" styleClass="titled-pane">
                                <content>
                                    <VBox spacing="10" style="-fx-padding: 15px;" />
                                </content>
                            </TitledPane>

                            <TitledPane text="Fruits" styleClass="titled-pane">
                                <content>
                                    <VBox spacing="10" style="-fx-padding: 15px;" />
                                </content>
                            </TitledPane>
                        </panes>
                    </Accordion>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20px; -fx-background-color: #FFFFFF;">
            <MFXButton onAction="#handleOpenCart"
                       text="Cart"
                       styleClass="primary-button"/>
            <MFXButton onAction="#handleMyOrders"
                       text="My Orders"
                       styleClass="secondary-button"/>
            <MFXButton onAction="#handleMessages"
                       text="Messages"
                       styleClass="secondary-button"/>
            <MFXButton onAction="#handleEditProfile"
                       text="Edit Profile"
                       styleClass="secondary-button"/>
            <MFXButton onAction="#handleLogout"
                       text="Logout"
                       styleClass="secondary-button"/>
        </HBox>
    </bottom>

</BorderPane>
